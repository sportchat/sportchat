<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    tools:context="com.example.administrator.sportapp.SelectMenuActivity">


    <FrameLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="48dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="343dp"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/buttonSoccerBall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="כדורגל"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/buttonRunning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="ריצה"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                tools:ignore="HardcodedText,UnusedAttribute" />

            <Button
                android:id="@+id/buttonYoga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="יוגה"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/buttonKaraoke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="קריוקי"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/buttonLogOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Log out"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

        </LinearLayout>

    </FrameLayout>

    <ImageButton
        android:id="@+id/myButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/add"
        android:onClick="goToGallery"
        tools:layout_editor_absoluteY="395dp"
        tools:layout_editor_absoluteX="268dp" />

</android.support.constraint.ConstraintLayout>